<div class="container">
    <div class="jumbotron">
        <h1 id="newColor">Eat <span style="color: #f04815">Da </span>BURGER</h1>
        <P id="newColor">We Make the BEST Burgers!</P>
        <br>
        <!-- Request Burger-->
        <h2 id="newColor">Order A Burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newBurger" id="newColor">New Burger:</label>
                    <input type="text" id="newBurger" name="burger">
                    {{!-- button will input new burger into the database. --}}
                    <button type="submit" class="btn btn-success" id="addburger"><span
                            class="fas fa-hamburger"></span></button>
                </div>
            </form>
        </panel>
    </div>

    <div class="row">
        <!-- New Burger ordered -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftHeader"><strong>New Burgers</strong></div>
                <div class="listBurgers">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatButton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span
                                class="fas fa-utensils" "style=color:white"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightHeader"><strong>Devoured Burgers</strong></div>
                <div class="listBurgers">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashButton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash-alt"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

    </div><!-- /row -->


</div>